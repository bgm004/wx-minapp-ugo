page {
  background-color: #eee;
}
.fb_main {
  padding: 20rpx;
  color: #666;
}
.fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_tips text {
  width: 30%;
  padding: 10rpx 0;
  text-align: center;
  background-color: #fff;
  margin: 20rpx 10rpx;
}
.fb_main .fb_content {
  background-color: #fff;
  margin-top: 20rpx;
}
.fb_main .fb_content textarea {
  padding: 10rpx;
}
.fb_main .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_content .fb_tool button {
  width: 90rpx;
  height: 90rpx;
  font-size: 60rpx !important;
  color: #ccc !important;
  margin: 0 0 30rpx 20rpx !important;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fb_main .fb_content .up_img_item {
  margin-left: 20rpx;
}
.fb_main .from_btn_wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.fb_main .from_btn_wrap button {
  width: 30%;
  margin: 0;
  padding: 15rpx;
  color: #fff;
  background-color: var(--themeColor);
}
